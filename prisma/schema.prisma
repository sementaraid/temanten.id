generator client {
  provider = "prisma-client"
  output = "generated"
}

datasource db {
  provider  = "sqlite"
}

model Version {
  id      String  @id @default(cuid())
  version String
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  phone       String
  whatsapp    String
  role        String
  password    String
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}

model Invitation {
  id          String    @id @default(cuid())
  slug        String
  title       String
}

model GuestList {
  id          String    @id @default(cuid())
  slug        String
  name        String
  phone       String
  whatsapp    String
  message     String
  status      String    @default("unknown") // received, accepted, declined
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
}

model GuestResponses {
  id            String    @id @default(cuid())
  slug          String
  name          String
  message       String
  confirmation  String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}
