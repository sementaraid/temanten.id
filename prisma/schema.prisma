generator client {
  provider = "prisma-client"
  output = "generated"
}

datasource db {
  provider  = "sqlite"
}

model Version {
  id      String  @id @default(cuid())
  version String
}

model User {
  id          String    @id @default(cuid())
  name        String
  email       String    @unique
  phone       String
  whatsapp    String
  role        String
  password    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Invitation {
  id          String    @id @default(cuid())
  rev         String
  name        String
  phone       String
  whatsapp    String
  message     String
  status      String    @default("unknown") // received, accepted, declined
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comments {
  id            String    @id @default(cuid())
  rev           String
  name          String
  message       String
  confirmation  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}